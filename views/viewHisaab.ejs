<%- include('./partials/header.ejs') %>
<div class="w-full px-20 py-10">
    <div class="mb-5">
        <h1 class="text-3xl mb-2"><%= hisaab.title %></h1>
        <div class="flex gap-3">
            <% if(hisaab.encrypted){ %>
                <div class="px-3 py-1 rounded-md flex gap-2 items-center bg-blue-500 text-white">
                    <i class="text-xs ri-lock-2-line"></i>
                    <h3 class="text-sm">Encrypted</h3>
                </div>
            <% } %>
            <% if(!hisaab.shareable){ %>
                <div class="px-3 py-1 rounded-md bg-zinc-300/70 flex items-center justify-center">
                    <i class="text-sm ri-eye-off-line"></i>
                </div>
            <% } %>
        </div>
    </div>
    
    <div class="bg-zinc-100 p-5 rounded-lg">
        <pre class="whitespace-pre-wrap"><%= hisaab.data %></pre>
    </div>
</div>
<%- include('./partials/footer.ejs') %> 